<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FourJobFiesta.Views" x:Class="FourJobFiesta.Views.CrystalsView" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	<Grid>
		<StackPanel>
		<local:CrystalView DataContext="{Binding Wind}"/>
		<local:CrystalView DataContext="{Binding Water}" Grid.Column="1"/>
		<local:CrystalView DataContext="{Binding Fire}" Grid.Row="1"/>
		<local:CrystalView DataContext="{Binding Earth}" Grid.Column="1" Grid.Row="1"/>
		</StackPanel>
	</Grid>
</UserControl>
